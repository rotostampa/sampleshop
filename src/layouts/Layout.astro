---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link type='text/css' rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bulma@1.0.2/css/bulma.min.css' media='all'/>
	</head>
	<body>
		<slot />

		<!-- Footer Section -->
		<footer class="footer">
		    <div class="content is-small">
		       	<a href="/admin.html" class="link">Decap CMS</a> | 
		       	<a href="/sveltia.html" class="link">Sveltia</a> | 
		       	&copy; 2024 Sample Shop

		    </div>
		</footer>

	</body>
</html>
<style is:global>
        html, body {
            min-height: 100%;
            margin: 0;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
        }
</style>
